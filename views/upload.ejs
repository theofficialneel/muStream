<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          Music Upload
        </h1>
        <% include ./partials/messages %>
        <form action="/music/upload" method="POST">
          <div class="form-group">
            <label for="title">Title</label>
            <input
              type="title"
              id="title"
              name="title"
              class="form-control"
              placeholder="Enter Title"
              value="<%= typeof title != 'undefined' ? title : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="album">Album</label>
            <input
              type="album"
              id="album"
              name="album"
              class="form-control"
              placeholder="Replace with album search"
              value="<%= typeof album != 'undefined' ? album : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="genre">Select genre : </label>
            <select 
              class="form-control"
              type="genre"
              id="genre"
              value="<%= typeof genre != 'undefined' ? genre : 'Pop' %>"
            >
              <option>Pop</option>
              <option>Hip-hop</option>
              <option>Folk</option>
              <option>Country</option>
              <option>Indie</option>
              <option>Classical</option>
              <option>EDM</option>
              <option>Rock</option>
              <option>Metal</option>
              <option>Jazz</option>
              <option>Funk</option>
              <option>Disco</option>
              <option>Reggae</option>
              <option>Rap</option>
              <option>Alt Rock</option>
            </select>
          </div>
          <div>ADD UPLOAD SONG IN MP3 FORMAT</div>
          <button type="submit" class="btn btn-primary btn-block">
            Upload
          </button>
        </form>
      </div>
    </div>
  </div>
  