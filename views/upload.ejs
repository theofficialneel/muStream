<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          Music Upload
        </h1>
        <% include ./partials/messages %>
        <form action="/music/upload" method="POST">
          <div class="form-group">
            <label for="title">Title</label>
            <input
              type="title"
              id="title"
              name="title"
              class="form-control"
              placeholder="Enter Title"
              value="<%= typeof title != 'undefined' ? title : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="artist">Artist</label>
            <input
              type="artist"
              id="artist"
              name="artist"
              class="form-control"
              placeholder="Enter Artist's Name"
              value="<%= typeof artist != 'undefined' ? artist : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="album">Album</label>
            <input
              type="album"
              id="album"
              name="album"
              class="form-control"
              placeholder="Enter the song's Album"
              value="<%= typeof album != 'undefined' ? album : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="genre">Genre</label>
            <input
              type="genre"
              id="genre"
              name="genre"
              class="form-control"
              placeholder="Enter Genre"
              value="<%= typeof genre != 'undefined' ? genre : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Upload
          </button>
        </form>
      </div>
    </div>
  </div>
  